<%= turbo_frame_tag "survey-list" do %>
  <div class="container">
    <%= link_to 'Dodaj nową ankietę', new_survey_path, data: { turbo_frame: "survey-list" }, class: "button" %>
    <h1>Lista ankiet</h1>

    <%= render partial: "surveys/survey_list", locals: { surveys: @surveys } %>
    <%= button_to "Odśwież listę", refresh_surveys_path, method: :get, data: { turbo_frame: "survey-list" } %>
  </div>
<% end %>
